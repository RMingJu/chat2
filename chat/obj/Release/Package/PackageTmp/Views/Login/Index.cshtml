
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登入</title>

    <style>
        #LoginForm {
            width: 400px;
            border-collapse: collapse;
            margin-left: auto;
            margin-right: auto;
        }

            #LoginForm td {
                padding: 10px;
            }

                #LoginForm td[class=Header] {
                    width: 120px;
                    font-weight: bold;
                    text-align: right;
                }

        #LoginBtn {
            width: 120px;
            height: 30px;
        }
    </style>

</head>
<body>
    <div>
        <form action="@Url.Action("ValidLoginProcess")" method="post">
            <table id="LoginForm">
                <tr>
                    <td class="Header">手機：</td>
                    <td><input id="Acct" name="Acct" type="text" /></td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:center;">
                        <span style="color:red;font-weight:bold;">@ViewData["Msg"]</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:center;">
                        <input id="LoginBtn" type="submit" value="登入" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
